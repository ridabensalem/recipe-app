<h1>Shopping List</h1>
<p>
  <span>
    Amount of food items to buy:<%= @recipe_foods.length %>
  </span>
  <>
    Total value of food needed: $<%= @recipe_foods.map {|rep| rep.food.price * (rep.quantity - rep.food.quantity) }.sum %>
  </span>
</p>
<table>
  
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Amount</th>
    </tr>
 
  
    <% @recipe_foods.each_with_index do | recipe,index|%>
    
      <tr>
   
      <tr>
      
        <td><%= recipe.food.name %> (<%= recipe.food.quantity %>)</td>
        <td><%= recipe.quantity %> <%= recipe.food.measurement_unit %></td>
        <td>$<%= recipe.food.price %></td>
        <td>$<%= recipe.food.price.to_i * (recipe.quantity - recipe.food.quantity) %></td>
      </tr>
    <% end %>
</table>